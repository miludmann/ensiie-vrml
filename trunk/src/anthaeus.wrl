#VRML V2.0 utf8

Viewpoint {
	position 47540 1000 0
	orientation 0 -.5 -.15 -1.57
	description "Antaeus"
	
}

DEF M Transform {
	translation 45040 0 0
	
			children [

Shape {
		appearance Appearance {
			
			material DEF Sun Material {
				diffuseColor 0.0 0.0 0.6
				#specularColor 0 0.0 .7
				#shininess .3
				#ambientIntensity .2
				emissiveColor 0 0 .2
				
			}
			texture ImageTexture {
			url "../textures/neptune.jpg"
			}
		}
		geometry Sphere {
			
			radius 400.00
		}
		}
]
}

DEF timer TimeSensor {
	cycleInterval 5
	loop TRUE
}

DEF Mo OrientationInterpolator {
	key [ 0 .5 1 ]
	keyValue [0 0 0 0, 0 1 0 3.14, 0 1 0 6.28,]
}


ROUTE timer.fraction_changed TO Mo.set_fraction
ROUTE Mo.value_changed TO M.rotation

