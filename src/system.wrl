DEF Ceinture_asteroides Transform {
	children [
		Copy {
		   copies 700
		   center 0 0 0
		   translation 1 0 0
		   rotation 0 1 0 0.45
		   scale 1 1 1
		   children [
    		  Transform {
			 children [
	    		Inline { url [ "asteroide.wrl" ] }
			   ]
    		  }
    		 ]
	 }
	]
}

