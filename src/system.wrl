#VRML V2.0 utf8


DEF EarthTs TimeSensor {
	cycleInterval 10
	loop TRUE
}

DEF NeptuneTs TimeSensor {
	cycleInterval 1647.9
	loop TRUE
}

DEF Sun Transform {
	translation 0 0 0
	scale 5 5 5
			children [
				Inline { url "sun.wrl" },
				
			]
		}

DEF Earth Transform {
	translation 0 0 0
	scale 1 1 1
			children [
				Inline { url "earth.wrl" },
				
			]
		}

DEF EarthPi OrientationInterpolator {
	key [ 0 .5 1 ]
	keyValue [ 0 1 0 3.14, 0 1 0 6.28, 0 1 0 9.42,  ]
}

ROUTE EarthTs.fraction_changed TO EarthPi.set_fraction
ROUTE EarthPi.value_changed TO Earth.rotation

DEF Neptune Transform {
	translation 0 0 0
	scale 1 1 1
			children [
				Inline { url "neptune.wrl" },
				
			]
		}

DEF NeptunePi OrientationInterpolator {
	key [ 0 .5 1 ]
	keyValue [ 0 1 0 3.14, 0 1 0 6.28, 0 1 0 9.42,  ]
}

ROUTE NeptuneTs.fraction_changed TO NeptunePi.set_fraction
ROUTE NeptunePi.value_changed TO Neptune.rotation
